<!DOCTYPE html>
<html>
  <head>
    <title>Register</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  </head>
  <body>
    <div class="container">


      <h2>Register</h2><br>
<form method="post" action="/users/save">

    <!-- Name input -->
    <% if (nameError){ %>
      <div class="alert alert-danger" role="alert">
        <%= nameError %>
      </div>
      <%} %>
    <div class="form-outline mb-4">
        <input value="<%= name %>"  name="name" id="name" type="text" id="form2Example1" class="form-control" />
        <label class="form-label" for="form2Example1">Name</label>
      </div>

    <!-- Email input -->
    <% if (emailError){ %>
      <div class="alert alert-danger" role="alert">
        <%= emailError %>
      </div>
    <%} else if(emailExistsError){%>
      <div class="alert alert-danger" role="alert">
        <%= emailExistsError %>
      </div>
    <%}%>

    <div class="form-outline mb-4">
      <input value="<%= email %>"  name="email" id="email" type="email" id="form2Example1" class="form-control" />
      <label class="form-label" for="form2Example1">Email address</label>
      <%= emailError %>

    </div>
  
    <!-- Password input -->
    <% if (passwordError){ %>
      <div class="alert alert-danger" role="alert">
        <%= passwordError %>
      </div>
    <%}%>
    <div class="form-outline mb-4">
      <input name="passwd" id="passwd" type="password" id="form2Example2" class="form-control" />
      <label class="form-label" for="form2Example2">Password</label>
    </div>
  
    <!-- 2 column grid layout for inline styling -->
    <div class="row mb-4">
      <div class="col d-flex justify-content-center">
      </div>
  
    </div>
    <p>Already a member?? <a href="/users/login">Sign in</a></p>
  
    <!-- Submit button -->
    <button type="submit" class="btn btn-primary btn-block mb-4">Sign up</button>
  

  </form>
</div>
  
</body>
</html>